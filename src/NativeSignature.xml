<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.itvisors.widget.native.nativesignature.NativeSignature" pluginWidget="true" offlineCapable="true" supportedPlatform="Native" 
    xmlns="http://www.mendix.com/widget/1.0/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Native Signature</name>
    <description>Signature widget for native apps</description>
    <icon></icon>
    <properties>
        <propertyGroup caption="Data source">
            <property key="signature" type="attribute" required="true" onChange="onChangeSignature">
                <caption>Signature</caption>
                <description>Where the b64 string of the signature will be saved</description>
                <attributeTypes>
                    <attributeType name="String"/>
                </attributeTypes>
            </property>
            <property key="onChangeSignature" type="action" required="true">
                <caption>On change signature action</caption>
                <description>Action to perform on submitting signature</description>
            </property>
            <property key="autoClear" type="boolean" defaultValue="true" required="true">
                <caption>Autoclear canvas</caption>
                <description>Clear canvas automatically on submit</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Captions">
            <property key="descriptionText" type="string" required="false">
                <caption>Description text</caption>
                <description>Default: "Sign above"</description>
            </property>
            <property key="clearText" type="string" required="false">
                <caption>Clear canvas button caption</caption>
                <description>Default: "Clear"</description>
            </property>
            <property key="confirmText" type="string" required="false">
                <caption>Confirm signature button caption</caption>
                <description>Default: "Confirm"</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Colors">
            <property key="buttonBackgroundColor" type="string" required="false">
                <caption>Button color</caption>
                <description>Use a valid CSS color (default #3F99F7)</description>
            </property>
            <property key="buttonTextColor" type="string" required="false">
                <caption>Button caption color</caption>
                <description>Use a valid CSS color (default #FFF)</description>
            </property>
        </propertyGroup>
    </properties>
</widget>
